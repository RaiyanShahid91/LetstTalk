<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="2dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="30dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_user_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/msg_sender_linear"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sender_image_chat"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/chat_user_profile"
        app:layout_constraintEnd_toStartOf="@+id/msg_sender_linear"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/msg_sender_linear"
        app:layout_constraintVertical_bias="0.17000002"
        tools:srcCompat="@tools:sample/avatars" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/msg_sender_linear"
        android:background="@drawable/sent_drawable"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_user_profile"
        app:layout_constraintEnd_toStartOf="@+id/chat_user_profile"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sender_image_chat"
        app:layout_constraintTop_toTopOf="@+id/chat_user_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/msg_senderName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Raiyan Shahid"
                android:textColor="#C65907"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/msg_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hellow"
            android:textSize="14sp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:inputType="textMultiLine" />

    </LinearLayout>
    <TextView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/chat_user_profile"
        app:layout_constraintStart_toStartOf="@+id/chat_user_profile"
        app:layout_constraintTop_toBottomOf="@+id/chat_user_profile" />


</androidx.constraintlayout.widget.ConstraintLayout>