<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.VideoFragments"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:id="@+id/top"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Join a meeting"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/joinmeet"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Room"
                android:id="@+id/history"
                android:textColor="@color/lightgrey"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="5dp"/>
    </LinearLayout>

        <FrameLayout
            android:id="@+id/videoFramLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top"
            android:layout_marginTop="8dp"
            android:background="@color/white" />


        <LinearLayout
            android:id="@+id/createVideoCode"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="14dp"
            android:background="@drawable/profile_edit"
            app:fabCustomSize="50dp">

            <ImageView
                android:id="@+id/edit"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/video_vector"
                app:tint="@color/white" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>