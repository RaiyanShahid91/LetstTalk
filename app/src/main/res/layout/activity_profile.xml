<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkblue"
    tools:context=".Activities.ProfileActivity">

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back_design"
        app:fabCustomSize="50dp">

        <ImageView
            android:id="@+id/edit"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back_black_24dp"
            app:tint="@color/black" />
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:background="@drawable/profile_design">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/namelayout"
            android:layout_marginTop="70dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Raiyan Shahid"
                android:textSize="20sp"
                android:padding="5dp"
                android:gravity="center"
                android:id="@+id/name"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bio of User"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:id="@+id/bio"
                android:padding="2dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/namelayout"
            android:id="@+id/fourth"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/post"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post"
                    android:gravity="center"
                    android:padding="3dp"
                    android:id="@+id/postText"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                <View
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:id="@+id/postView"
                    android:background="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/download">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Downloads"
                    android:gravity="center"
                    android:id="@+id/downloadText"
                    android:padding="3dp"
                    android:textSize="16sp"
                    android:textColor="#8A8888"
                    android:textStyle="bold" />
                <View
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:id="@+id/downloadView"
                    android:background="#8A8888" />
            </LinearLayout>
        </LinearLayout>

        <GridView
            android:id="@+id/gridViewSavedPhotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fourth"
            android:layout_marginTop="5dp"
            android:horizontalSpacing="3dp"
            android:numColumns="3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:verticalSpacing="3dp"
            tools:listitem="@layout/layout_profile" />



        <GridView
            android:id="@+id/gridViewUploadedPhotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="3dp"
            android:numColumns="3"
            android:layout_marginTop="5dp"
            android:layout_below="@id/fourth"
            android:visibility="gone"
            tools:listitem="@layout/layout_profile"
            android:verticalSpacing="3dp" />



    </RelativeLayout>
    <LinearLayout
        android:id="@+id/second"
        android:layout_below="@id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/avatar" />
    </LinearLayout>
</RelativeLayout>